<?axis([
	'device'		=> 'stepim',
	'bus'			=> 'can',
#	'simulated'		=> true
])?>


common shared conv_frame as moving frame of xyzr



<?lib_init()?>
	conv_frame.type						= 0
	conv_frame.numberDegreesOfFreedom	= 1
	conv_frame.masterSource				= positionCommand
	conv_frame.upStream[1]				= #{ 150,0,0,0}
	conv_frame.downStream[1]			= #{-150,0,0,0}
	conv_frame.upMaster[1]				= 0
	conv_frame.downMaster[1]			= 300
end sub


<?drive_update(2)?>
	conv_driveTune(30000, 0, 0, 415, 3500, 35)
end sub


<?drive_setup()?>
	positionfactor				= positionfactor / 107
	direction					= 1
end sub


<?axis_setup()?>
	absolute					= false
	axistype					= 0
	
	<?axis_setupSpeed(300)?>
	
	positionerrormax			= 5
end sub



<?lib_debug()?>
	'com_putLocationXyzr("frame/here",		conv_frame.here)
	'com_putLocationXyzr("frame/zero",		conv_frame.zero)
	com_putDouble("velocityCommand",		velocityCommand)
end sub
