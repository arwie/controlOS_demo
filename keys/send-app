#!/bin/sh

HOST=${1-sys}

BASEDIR=$(dirname $(realpath $0))

cd $BASEDIR/..


SSHCMD="ssh -t -i keys/ssh/id_rsa"
SSHUSER="root@$HOST"

sshsys() {
	$SSHCMD $SSHUSER $@							|| exit 1
}

rsyncsys() {
	rsync -rl -tp -v -e "$SSHCMD" $1 $SSHUSER:$2		|| exit 1
}


sshsys "mount -o remount,rw LABEL=ROOT && rm -f /version"

rsyncsys root/local_src/python-shared/shared	/usr/lib/python3.10/site-packages
rsyncsys root/projectroot/usr					/

sshsys "systemctl daemon-reload && systemctl --quiet stop gui.service studio.service && mc-update"
