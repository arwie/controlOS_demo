{
	"editor.insertSpaces": false,
	"explorer.excludeGitIgnore": true,
	"python.analysis.autoSearchPaths": false,
	"python.analysis.typeCheckingMode": "basic",
	"python.analysis.include": [
		"root/local_src",
		"root/projectroot",
		"root/base/projectroot",
		"office"
	],
	"python.analysis.extraPaths": [
		"root/local_src/python-shared",
		"root/platform-any/sysroot-target/usr/lib/python3.13/site-packages",
		"root/platform-any/sysroot-host/usr/lib/python3.13/site-packages"
	],
	"python.analysis.diagnosticMode": "workspace",
	"workbench.editor.customLabels.patterns": {
		"**/__init__.py": "${dirname}.${extname}",
		"**/index.mjs":   "${dirname}.${extname}",
	},
}